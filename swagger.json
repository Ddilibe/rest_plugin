{
    "openapi": "3.0.0",
    "info": {
        "title": "MyApp API",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "/wp-json/cison/v1"
        }
    ],
    "paths": {
        "/auth/login": {
            "post": {
                "summary": "Login",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "username": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "JWT Token"
                    }
                }
            }
        }
    },
    "components": {
        "securitySchemes": {
            "BearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        }
    }
}